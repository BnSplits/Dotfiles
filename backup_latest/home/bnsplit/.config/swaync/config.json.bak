{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "application",
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-icon-size": 64,
  "notification-body-image-height": 150,
  "notification-body-image-width": 200,
  "timeout": 5,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "relative-timestamps": true,
  "control-center-width": 500,
  "control-center-height": 600,
  "notification-window-width": 500,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 0,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {
    "example-script": {
      "exec": "echo 'Do something...'",
      "urgency": "Normal"
    },
    "example-action-script": {
      "exec": "echo 'Do something actionable!'",
      "urgency": "Normal",
      "run-on": "action"
    }
  },
  "notification-visibility": {
    "example-name": {
      "state": "enabled",
      "urgency": "Normal",
      "app-name": "Spotify"
    }
  },
  "widgets": [
    "title",
    "dnd",
    "buttons-grid",
    "volume",
    "backlight",
    "notifications",
    "mpris"
  ],
  "widget-config": {
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "Clear All",
      "clear-all-button": true
    },
    "title": {
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Leave me alone"
    },
    "label": {
      "max-lines": 5,
      "text": "Label Text"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12
    },
    "volume": {
      "label": "󰕾 "
    },
    "backlight": {
      "label": " ",
      "device": "amdgpu_bl1"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": " ",
          "type": "toggle",
          "active": true,
          "command": "sh -c 'if [ \"$SWAYNC_TOGGLE_STATE\" = true ]; then nmcli radio wifi on; else nmcli radio wifi off; fi'",
          "update_command": "sh -c 'nmcli radio wifi | grep -q enabled && echo true || echo false'"
        },
        {
          "label": "󰂯",
          "type": "toggle",
          "active": true,
          "command": "sh -c 'if bluetoothctl show | grep -q \"Powered: yes\"; then bluetoothctl power off; else bluetoothctl power on; fi'",
          "update_command": "sh -c 'bluetoothctl show | grep -q \"Powered: yes\" && echo true || echo false'"
        },
        {
          "label": "󰗌⁴",
          "type": "toggle",
          "command": "sh -c '~/.config/bnsplit/scripts/toggle_xray.sh gtk4'",
          "update_command": "sh -c 'grep -qm1 xray ~/.themes/custom-adw/gtk-4.0/colors.css && echo true || echo false'"
        },
        {
          "label": "󰗌³",
          "type": "toggle",
          "command": "sh -c '~/.config/bnsplit/scripts/toggle_xray.sh gtk3'",
          "update_command": "sh -c 'grep -qm1 xray ~/.themes/custom-adw/gtk-3.0/colors.css && echo true || echo false'"
        },
        {
          "label": "󰗌",
          "type": "toggle",
          "active": false,
          "command": "sh -c '~/.config/bnsplit/scripts/toggle_xray.sh'",
          "update_command": "sh -c 'grep -q opacity $HOME/.config/hypr/hyprland/_xray-windows.conf && echo true || echo false'"
        },
        {
          "label": "",
          "command": "sh -c 'swaync-client --close-panel; sleep 0.2; hyprpicker -a'"
        },
        {
          "label": "",
          "command": "bash -c 'swaync-client --close-panel; [[ $(pgrep -f hyprsunset) ]] && killall hyprsunset || setsid hyprsunset -t 4500'"
        },

        {
          "label": "",
          "command": "sh -c 'swaync-client --close-panel; ags toggle Logout'"
        }
      ]
    }
  }
}
